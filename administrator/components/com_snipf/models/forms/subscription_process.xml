<?xml version="1.0" encoding="utf-8"?>

<form>

  <fieldset name="process">

	<field name="year" type="text"
		label="COM_SNIPF_FIELD_YEAR_LABEL"
		description="COM_SNIPF_FIELD_YEAR_DESC"
		maxlength="4"
		required="true" />

	<field name="payment_date" type="calendar"
	       label="COM_SNIPF_FIELD_PAYMENT_DATE_LABEL" 
	       description="COM_SNIPF_FIELD_PAYMENT_DATE_DESC"
	       translateformat="true"
	       showtime="false"
	       size="22"
	       filter="user_utc" />

	<field name="headquarters_payment"
	       type="radio"
	       default="0"
	       class="btn-group btn-group-yesno"
	       label="COM_SNIPF_FIELD_HEADQUARTERS_PAYMENT_LABEL"
	       description="COM_SNIPF_FIELD_HEADQUARTERS_PAYMENT_DESC">
	       <option value="1">JYES</option>
	       <option value="0">JNO</option>
	</field>

	<field name="communication_payment"
	       type="radio"
	       default="0"
	       class="btn-group btn-group-yesno"
	       label="COM_SNIPF_FIELD_COMMUNICATION_PAYMENT_LABEL"
	       description="COM_SNIPF_FIELD_COMMUNICATION_PAYMENT_DESC">
	       <option value="1">JYES</option>
	       <option value="0">JNO</option>
	</field>

	<field name="cads_payment"
	       type="radio"
	       default="0"
	       class="btn-group btn-group-yesno"
	       label="COM_SNIPF_FIELD_CADS_PAYMENT_LABEL"
	       description="COM_SNIPF_FIELD_CADS_PAYMENT_DESC">
	       <option value="1">JYES</option>
	       <option value="0">JNO</option>
	</field>

	<field name="comments" type="textarea"
		label="COM_SNIPF_FIELD_COMMENTS_LABEL"
		description="COM_SNIPF_FIELD_COMMENTS_DESC"
		rows="5" cols="10"
		default=""></field>

	<field name="created_by" type="user"
		label="COM_SNIPF_FIELD_CREATED_BY_LABEL" description="COM_SNIPF_FIELD_CREATED_BY_DESC" />

	<field name="created" type="calendar"
	       label="COM_SNIPF_FIELD_CREATED_DATE_LABEL" description="COM_SNIPF_FIELD_CREATED_DATE_DESC"
	       class="readonly" readonly="true"
	       translateformat="true"
	       showtime="true"
	       size="22" 
	       filter="user_utc" />

	<field name="modified" type="calendar" class="readonly"
	       label="JGLOBAL_FIELD_MODIFIED_LABEL"
	       description="COM_SNIPF_FIELD_MODIFIED_DESC"
	       translateformat="true"
	       showtime="true"
	       readonly="true"
	       filter="user_utc" />

	<field name="modified_by" type="user"
	       label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
	       class="readonly" readonly="true" filter="unset" />

	<field name="start_process" type="hidden" />
	<field name="end_process" type="hidden" />
  </fieldset>
</form>



