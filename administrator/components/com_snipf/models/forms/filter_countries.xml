<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
		        label="COM_SNIPF_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="user_id"
			type="componentuser"
			onchange="this.form.submit();" >
			<option value="">COM_SNIPF_OPTION_SELECT_USER</option>
		</field>
		<field
			name="continent_code"
			type="list"
			onchange="this.form.submit();" >
			<option value="">COM_SNIPF_OPTION_SELECT_CONTINENT</option>
			<option value="AF">COM_SNIPF_LANG_CONTINENT_AF</option>
			<option value="AN">COM_SNIPF_LANG_CONTINENT_AN</option>
			<option value="AS">COM_SNIPF_LANG_CONTINENT_AS</option>
			<option value="EU">COM_SNIPF_LANG_CONTINENT_EU</option>
			<option value="OC">COM_SNIPF_LANG_CONTINENT_OC</option>
			<option value="NA">COM_SNIPF_LANG_CONTINENT_NA</option>
			<option value="SA">COM_SNIPF_LANG_CONTINENT_SA</option>
		</field>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();" default="" >
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="c.published ASC">JSTATUS_ASC</option>
			<option value="c.published DESC">JSTATUS_DESC</option>
			<option value="c.name ASC">COM_SNIPF_TITLE_ASC</option>
			<option value="c.name DESC">COM_SNIPF_TITLE_DESC</option>
			<option value="user ASC">JAUTHOR_ASC</option>
			<option value="user DESC">JAUTHOR_DESC</option>
			<option value="c.created ASC">JDATE_ASC</option>
			<option value="c.created DESC">JDATE_DESC</option>
			<option value="c.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="c.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_SNIPF_LIST_LIMIT"
			description="COM_SNIPF_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
