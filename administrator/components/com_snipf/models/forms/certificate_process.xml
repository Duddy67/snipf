<?xml version="1.0" encoding="utf-8"?>

<form addrulepath="/administrator/components/com_snipf/models/rules">

  <fieldset name="process">

	<field name="start_process" type="calendar"
	       label="COM_SNIPF_FIELD_PUBLISH_UP_LABEL" 
	       description="COM_SNIPF_FIELD_PUBLISH_UP_DESC"
	       translateformat="true"
	       showtime="false"
	       size="22"
	       required="true" 
	       filter="user_utc" />

	<field name="end_process" type="calendar"
	       label="COM_SNIPF_FIELD_PUBLISH_UP_LABEL" 
	       description="COM_SNIPF_FIELD_PUBLISH_UP_DESC"
	       translateformat="true"
	       showtime="false"
	       size="22"
	       filter="user_utc" />

	<field name="description" type="textarea"
		label="COM_SNIPF_FIELD_DESCRIPTION_LABEL"
		description="COM_SNIPF_FIELD_DESCRIPTION_DESC"
		rows="5" cols="10"
		default=""></field>

	<field name="created_by" type="user"
		label="COM_SNIPF_FIELD_CREATED_BY_LABEL" description="COM_SNIPF_FIELD_CREATED_BY_DESC" />

	<field name="created" type="calendar"
	       label="COM_SNIPF_FIELD_CREATED_DATE_LABEL" description="COM_SNIPF_FIELD_CREATED_DATE_DESC"
	       class="readonly" readonly="true"
	       translateformat="true"
	       showtime="true"
	       size="22" 
	       filter="user_utc" />

	<field name="modified" type="calendar" class="readonly"
	       label="JGLOBAL_FIELD_MODIFIED_LABEL"
	       description="COM_SNIPF_FIELD_MODIFIED_DESC"
	       translateformat="true"
	       showtime="true"
	       readonly="true"
	       filter="user_utc" />

	<field name="modified_by" type="user"
	       label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
	       class="readonly" readonly="true" filter="unset" />

	<field name="starting_file_number" type="text"
		label="COM_SNIPF_FIELD_STARTING_FILE_NUMBER_LABEL"
		description="COM_SNIPF_FIELD_STARTING_FILE_NUMBER_DESC"
		required="true" />

	<field name="starting_file_sending" type="calendar"
	       label="COM_SNIPF_FIELD_STARTING_FILE_SENDING_LABEL" 
	       description="COM_SNIPF_FIELD_STARTING_FILE_SENDING_DESC"
	       translateformat="true"
	       showtime="false"
	       size="22"
	       required="true" 
	       filter="user_utc" />

  </fieldset>
</form>



