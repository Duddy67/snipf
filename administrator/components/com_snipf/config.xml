    <fieldset name="list_default_parameters"
	      label="JGLOBAL_LIST_LAYOUT_OPTIONS"
	      description="COM_SNIPF_CONFIG_LIST_SETTINGS_DESC" >

	      <field name="show_headings"
		     type="radio"
		     class="btn-group btn-group-yesno"
		     default="1"
		     label="JGLOBAL_SHOW_HEADINGS_LABEL"
		     description="JGLOBAL_SHOW_HEADINGS_DESC">
		     <option value="1">JSHOW</option>
		     <option value="0">JHIDE</option>
	      </field>

	      <field name="list_show_date"
		      type="radio"
		      class="btn-group btn-group-yesno"
		      label="JGLOBAL_SHOW_DATE_LABEL"
		      description="COM_SNIPF_SHOW_DATE_DESC"
		      default="1">
		      <option value="1">JSHOW</option>
		      <option value="0">JHIDE</option>
	      </field>

	      <field name="date_format"
		      type="text" size="15"
		      label="JGLOBAL_DATE_FORMAT_LABEL"
		      description="JGLOBAL_DATE_FORMAT_DESC" />

	      <field name="list_show_hits"
		      type="radio"
		      class="btn-group btn-group-yesno"
		      label="JGLOBAL_LIST_HITS_LABEL"
		      description="COM_SNIPF_SHOW_HITS_DESC"
		      default="1">
		      <option value="1">JSHOW</option>
		      <option value="0">JHIDE</option>
	      </field>

	      <field name="list_show_author"
		      type="radio"
		      class="btn-group btn-group-yesno"
		      label="JGLOBAL_LIST_AUTHOR_LABEL"
		      description="COM_SNIPF_SHOW_AUTHOR_DESC"
		      default="1">
		      <option value="1">JSHOW</option>
		      <option value="0">JHIDE</option>
	      </field>
    </fieldset>

    <fieldset name="pdf_templates" label="COM_SNIPF_PDF_TEMPLATES_LABEL"
	      description="COM_SNIPF_PDF_TEMPLATES_DESC" >

	      <field name="person_pdf" 
		     type="editor"
		     filter="JComponentHelper::filterText"
		     label="COM_SNIPF_NUMBER_ITEMS_DISPLAY_LABEL"
		     description="COM_SNIPF_NUMBER_ITEMS_DISPLAY_DESC">
	      </field>
    </fieldset>

    <fieldset name="shared" label="COM_SNIPF_SHARED_LABEL"
	      description="COM_SNIPF_SHARED_DESC" >

	      <field name="filter_field" 
		     type="list"
		     label="JGLOBAL_FILTER_FIELD_LABEL"
		     description="JGLOBAL_FILTER_FIELD_DESC">
		     <option value="hide">JHIDE</option>
		     <option value="lastname">COM_SNIPF_FIELD_LASTNAME_LABEL</option>
		     <option value="author">JAUTHOR</option>
	      </field>

	      <field name="filter_ordering"
		     type="radio" default="1"
		     class="btn-group btn-group-yesno"
		     label="COM_SNIPF_SHOW_SORTING_FILTER_LABEL"
		     description="COM_SNIPF_SHOW_SORTING_FILTER_DESC">
		     <option value="1">JSHOW</option>
		     <option value="0">JHIDE</option>
