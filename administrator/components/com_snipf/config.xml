		   label="JGLOBAL_SEF_ADVANCED_LABEL"
		   description="JGLOBAL_SEF_ADVANCED_DESC"
		   filter="integer" >
		   <option value="0">JGLOBAL_SEF_ADVANCED_LEGACY</option>
