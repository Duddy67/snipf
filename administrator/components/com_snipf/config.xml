    <fieldset name="blog_default_parameters"
	      label="COM_SNIPF_CONFIG_BLOG_SETTINGS_LABEL"
	      description="COM_SNIPF_CONFIG_BLOG_SETTINGS_DESC" >

		<field name="num_leading_persons"
		       type="text"
		       default="1"
		       label="COM_SNIPF_NUM_LEADING_PERSONS_LABEL"
		       description="COM_SNIPF_NUM_LEADING_PERSONS_DESC">
